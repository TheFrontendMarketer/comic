---
// Props
const { day, month, title, location, time, href = "#" } = Astro.props;
---

<li class="flex flex-col sm:flex-row items-start gap-6 bg-white p-6">
  <span
    class="flex h-24 w-24 flex-none flex-col items-center justify-center bg-gray-900 text-white text-base"
  >
    <strong class="text-2xl">{day}</strong>
    {month}
  </span>
  <div class="flex flex-col lg:flex-row gap-6 w-full">
    <div class="flex flex-col">
      <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>
      <p class="text-sm text-gray-600 mb-2">{location}</p>
      <div class="flex items-center gap-2 text-sm text-gray-600">
        <img
          src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/gold-clock.svg"
          alt="icon"
          class="w-6"
        />
        {time}
      </div>
    </div>
    <div class="flex items-center">
      <a
        href={href}
        class="inline-block bg-indigo-600 text-white font-bold px-6 py-3 min-w-[150px] text-center hover:bg-gray-800 transition"
      >
        RSVP
      </a>
    </div>
  </div>
</li>
