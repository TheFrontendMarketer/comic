---
// Props
const { title, date, img, href = "#" } = Astro.props;
---

<section class="relative z-10 overflow-hidden px-4 pb-24">
  <div class="mx-auto flex max-w-7xl flex-col items-center gap-16">
    <!-- Posts Grid -->
    <ul>
      <li class="flex flex-col">
        <a href="/" class="flex flex-col gap-4 flex-grow">
          <picture class="relative w-full h-80 rounded-2xl overflow-hidden">
            <img
              src={img}
              class="absolute inset-0 w-full h-full object-cover"
            />
          </picture>
          <div
            class="flex flex-col justify-between flex-grow bg-gray-100 p-5 rounded-2xl transition-colors hover:bg-indigo-600 group"
          >
            <h3
              class="text-lg sm:text-xl font-semibold text-gray-900 group-hover:text-white flex justify-between items-center gap-4"
            >
              {title}
              <span
                class="w-12 h-12 border border-gray-300 rounded-full flex items-center justify-center group-hover:border-white"
              >
                <img
                  src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/agency-arrow-upper-right.svg"
                  alt="arrow"
                  class="h-3 group-hover:brightness-200 group-hover:grayscale group-hover:rotate-45"
                />
              </span>
            </h3>
            <div
              class="flex justify-between items-center border-t border-gray-200 mt-4 pt-4"
            >
              <span
                class="flex items-center gap-2 text-sm text-gray-700 group-hover:text-white"
              >
                <img
                  src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/agency-calendar.svg"
                  alt="calendar"
                  class="h-6 group-hover:brightness-200"
                />
                {date}
              </span>
            </div>
          </div>
        </a>
      </li>
      <!-- Duplicate other posts similarly -->
    </ul>
  </div>
</section>
